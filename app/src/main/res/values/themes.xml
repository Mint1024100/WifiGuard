<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.WifiGuard" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_variant</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/background</item>
        
        <!-- Action bar -->
        <item name="actionBarStyle">@style/Theme.WifiGuard.ActionBar</item>
        
        <!-- Card view -->
        <item name="cardViewStyle">@style/Theme.WifiGuard.CardView</item>
        
        <!-- Button styles (some Material3 attributes are not theme attributes) -->
        <!-- These will be applied directly in layouts instead of through theme -->
        <!-- Text styles -->
        <item name="textAppearanceHeadline1">@style/Theme.WifiGuard.TextAppearance.Headline1</item>
        <item name="textAppearanceHeadline2">@style/Theme.WifiGuard.TextAppearance.Headline2</item>
        <item name="textAppearanceHeadline3">@style/Theme.WifiGuard.TextAppearance.Headline3</item>
        <item name="textAppearanceHeadline4">@style/Theme.WifiGuard.TextAppearance.Headline4</item>
        <item name="textAppearanceHeadline5">@style/Theme.WifiGuard.TextAppearance.Headline5</item>
        <item name="textAppearanceHeadline6">@style/Theme.WifiGuard.TextAppearance.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/Theme.WifiGuard.TextAppearance.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/Theme.WifiGuard.TextAppearance.Subtitle2</item>
        <item name="textAppearanceBody1">@style/Theme.WifiGuard.TextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/Theme.WifiGuard.TextAppearance.Body2</item>
        <item name="textAppearanceCaption">@style/Theme.WifiGuard.TextAppearance.Caption</item>
        <item name="textAppearanceButton">@style/Theme.WifiGuard.TextAppearance.Button</item>
        <item name="textAppearanceOverline">@style/Theme.WifiGuard.TextAppearance.Overline</item>
    </style>
    
    <!-- Action bar style -->
    <style name="Theme.WifiGuard.ActionBar" parent="Widget.Material3.ActionBar.Solid">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/on_primary</item>
        <item name="subtitleTextColor">@color/on_primary</item>
    </style>
    
    <!-- Card view style -->
    <style name="Theme.WifiGuard.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
    <!-- Button styles -->
    <style name="Theme.WifiGuard.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/on_primary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Theme.WifiGuard.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Theme.WifiGuard.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Text appearance styles -->
    <style name="Theme.WifiGuard.TextAppearance.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="Theme.WifiGuard.TextAppearance.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="Theme.WifiGuard.TextAppearance.Headline3" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="Theme.WifiGuard.TextAppearance.Headline4" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="Theme.WifiGuard.TextAppearance.Headline5" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="Theme.WifiGuard.TextAppearance.Headline6" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="Theme.WifiGuard.TextAppearance.Subtitle1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="Theme.WifiGuard.TextAppearance.Subtitle2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="Theme.WifiGuard.TextAppearance.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="Theme.WifiGuard.TextAppearance.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="Theme.WifiGuard.TextAppearance.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_hint</item>
    </style>
    
    <style name="Theme.WifiGuard.TextAppearance.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Theme.WifiGuard.TextAppearance.Overline" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/text_hint</item>
    </style>
    
    <!-- Custom component styles -->
    <style name="Theme.WifiGuard.NetworkCard" parent="Theme.WifiGuard.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>
    
    <style name="Theme.WifiGuard.SecurityIndicator" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Theme.WifiGuard.SignalIndicator" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">12dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.WifiGuard.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:statusBarColor">@color/primary_variant</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>
