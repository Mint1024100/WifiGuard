<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.WifiGuard" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container</item>

        <!-- Tertiary brand color -->
        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorTertiaryContainer">@color/tertiary_container</item>
        <item name="colorOnTertiary">@color/on_tertiary</item>
        <item name="colorOnTertiaryContainer">@color/on_tertiary_container</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnSurfaceVariant">@color/on_surface</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorErrorContainer">@color/error_container</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="colorOnErrorContainer">@color/on_error_container</item>

        <!-- Outline color -->
        <item name="colorOutline">@color/outline</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface</item>
        <!-- windowLightNavigationBar requires API 27+, but minSdk is 26 -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o">false</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/background</item>

        <!-- Action bar -->
        <item name="actionBarStyle">@style/Theme.WifiGuard.ActionBar</item>

        <!-- Card view -->
        <item name="cardViewStyle">@style/Theme.WifiGuard.CardView</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Theme.WifiGuard.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Theme.WifiGuard.Button.Outlined</item>

        <!-- Text styles -->
        <item name="textAppearanceHeadlineLarge">@style/Theme.WifiGuard.TextAppearance.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/Theme.WifiGuard.TextAppearance.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/Theme.WifiGuard.TextAppearance.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/Theme.WifiGuard.TextAppearance.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/Theme.WifiGuard.TextAppearance.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/Theme.WifiGuard.TextAppearance.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/Theme.WifiGuard.TextAppearance.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/Theme.WifiGuard.TextAppearance.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/Theme.WifiGuard.TextAppearance.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/Theme.WifiGuard.TextAppearance.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/Theme.WifiGuard.TextAppearance.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/Theme.WifiGuard.TextAppearance.LabelSmall</item>
    </style>

    <!-- Action bar style -->
    <style name="Theme.WifiGuard.ActionBar" parent="Widget.Material3.ActionBar.Solid">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/on_primary</item>
        <item name="subtitleTextColor">@color/on_primary</item>
    </style>

    <!-- Card view style - Modern rounded corners and elevation -->
    <style name="Theme.WifiGuard.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>          <!-- More rounded corners -->
        <item name="cardElevation">2dp</item>               <!-- Subtle elevation -->
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <!-- Button styles - Modern with updated corner radius -->
    <style name="Theme.WifiGuard.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/on_primary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>               <!-- More rounded buttons -->
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.WifiGuard.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/outline</item>
        <item name="cornerRadius">12dp</item>               <!-- More rounded buttons -->
        <item name="backgroundTint">@color/surface</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.WifiGuard.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">12dp</item>               <!-- More rounded buttons -->
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Modern text appearance styles -->
    <style name="Theme.WifiGuard.TextAppearance.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.WifiGuard.TextAppearance.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.WifiGuard.TextAppearance.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.WifiGuard.TextAppearance.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.WifiGuard.TextAppearance.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.WifiGuard.TextAppearance.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.WifiGuard.TextAppearance.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.WifiGuard.TextAppearance.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Theme.WifiGuard.TextAppearance.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <style name="Theme.WifiGuard.TextAppearance.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/on_primary</item>
    </style>

    <style name="Theme.WifiGuard.TextAppearance.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Theme.WifiGuard.TextAppearance.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <!-- Custom component styles -->
    <style name="Theme.WifiGuard.NetworkCard" parent="Theme.WifiGuard.CardView">
        <item name="cardCornerRadius">20dp</item>           <!-- More modern rounded corners -->
        <item name="cardElevation">1.5dp</item>             <!-- Subtle elevation -->
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="Theme.WifiGuard.SecurityIndicator" parent="Widget.Material3.Chip.Assist">
        <item name="chipCornerRadius">20dp</item>           <!-- Modern pill shape -->
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.WifiGuard.SignalIndicator" parent="Widget.Material3.Chip.Assist">
        <item name="chipCornerRadius">16dp</item>           <!-- Modern pill shape -->
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.WifiGuard.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- windowLightNavigationBar requires API 27+, but minSdk is 26 -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o">false</item>
    </style>
</resources>
