<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Конфигурация сетевой безопасности для WifiGuard -->
    
    <!-- Разрешить HTTP трафик для debug сборки -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
    
    <!-- Базовые настройки для всех доменов -->
    <base-config cleartextTrafficPermitted="false">
        <!-- Только HTTPS для production -->
        <trust-anchors>
            <!-- Системные сертификаты -->
            <certificates src="system"/>
            <!-- Пользовательские сертификаты (для debug) -->
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
    
    <!-- Настройки для API endpoints -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.wifiguard.com</domain>
        <domain includeSubdomains="true">secure.wifiguard.com</domain>
        <domain includeSubdomains="true">analytics.wifiguard.com</domain>
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>
    
    <!-- Настройки для debug API -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">debug-api.wifiguard.com</domain>
        <domain includeSubdomains="true">debug-secure.wifiguard.com</domain>
        <domain includeSubdomains="true">debug-analytics.wifiguard.com</domain>
    </domain-config>
    
    <!-- Отключить certificate transparency для debug -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>
</network-security-config>