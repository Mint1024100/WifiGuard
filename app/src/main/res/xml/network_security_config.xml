<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Restrict cleartext traffic to specific domains only -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">wifiguard.com</domain>
        <domain includeSubdomains="true">api.wifiguard.com</domain>
        <domain includeSubdomains="true">secure.wifiguard.com</domain>
        <domain includeSubdomains="true">analytics.wifiguard.com</domain>
    </domain-config>
    
    <!-- Base configuration -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system-provided CAs -->
            <certificates src="system"/>
            <!-- Trust user-provided CAs -->
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
    
    <!-- Debug config to allow local development -->
    <debug-overrides>
        <trust-anchors>
            <!-- Trust user-provided CAs while debuggable -->
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>
</network-security-config>