<?xml version="1.0" encoding="utf-8"?>
<!--
    Network Security Configuration for WifiGuard
    
    This app is designed to work OFFLINE - no external API calls are made.
    This configuration provides maximum security by:
    - Disabling cleartext (HTTP) traffic completely
    - Only trusting system CA certificates in production
    - User CA certificates only allowed in debug builds
-->
<network-security-config>
    
    <!-- Base configuration: Maximum security for production -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust only system-provided CAs in production -->
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
    
    <!-- Debug configuration: Allow testing with user certificates -->
    <debug-overrides>
        <trust-anchors>
            <!-- System CAs -->
            <certificates src="system"/>
            <!-- User CAs for debugging (e.g., Charles Proxy) -->
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>
    
</network-security-config>