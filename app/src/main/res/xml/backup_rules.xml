<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Включить настройки, но исключить чувствительные данные -->
    <include domain="sharedpref" path="."/>
    <exclude domain="database" path="."/> <!-- Не резервировать базу данных с информацией безопасности -->
    <exclude domain="file" path="encryption_keys/"/> <!-- Исключить файлы ключей шифрования -->
</full-backup-content>