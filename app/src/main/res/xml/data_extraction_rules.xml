<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <!-- Правила извлечения данных для Android 12+ (API 31+) -->
    
    <!-- Настройки для полного резервного копирования -->
    <cloud-backup>
        <!-- Исключить чувствительные данные из облачного резервного копирования -->
        <exclude domain="sharedpref" path="." />
        <exclude domain="database" path="." />
        <exclude domain="file" path="." />
        <exclude domain="external" path="." />
        
        <!-- Разрешить только настройки приложения -->
        <include domain="sharedpref" path="app_preferences.xml" />
    </cloud-backup>
    
    <!-- Настройки для извлечения данных устройства -->
    <device-transfer>
        <!-- Исключить все данные при передаче устройства -->
        <exclude domain="sharedpref" path="." />
        <exclude domain="database" path="." />
        <exclude domain="file" path="." />
        <exclude domain="external" path="." />
        
        <!-- Разрешить только базовые настройки -->
        <include domain="sharedpref" path="app_preferences.xml" />
    </device-transfer>
    
    <!-- Дополнительные правила безопасности -->
    <key-value>
        <!-- Исключить все ключи из резервного копирования -->
        <exclude key="*" />
    </key-value>
</data-extraction-rules>