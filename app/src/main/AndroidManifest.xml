<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ===== РАЗРЕШЕНИЯ ===== -->
    
    <!-- Wi-Fi сканирование -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    
    <!-- Местоположение (требуется для Wi-Fi сканирования на Android 6+) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- Android 13+ - новое разрешение для Wi-Fi устройств -->
    <uses-permission 
        android:name="android.permission.NEARBY_WIFI_DEVICES"
        android:usesPermissionFlags="neverForLocation"
        tools:targetApi="tiramisu" />
    
    <!-- Уведомления на Android 13+ -->
    <uses-permission 
        android:name="android.permission.POST_NOTIFICATIONS"
        tools:targetApi="tiramisu" />
    
    <!-- Фоновая работа -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- Базовое разрешение для foreground services (требуется для всех версий Android, включая Android 14+) -->
    <uses-permission 
        android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Android 14+ требует явное разрешение для foreground service типа location -->
    <!-- Обоснование: Используется для сканирования Wi-Fi сетей в фоновом режиме, что требует доступа к местоположению -->
    <uses-permission 
        android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    
    <!-- Интернет: используется для проверки состояния сетевого подключения (NetworkMonitor), данные не передаются на внешние серверы -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Запросы для взаимодействия с другими приложениями (Android 11+) -->
    <queries>
        <!-- Для открытия настроек Wi-Fi и настроек приложения -->
        <intent>
            <action android:name="android.settings.WIFI_SETTINGS" />
        </intent>
        <intent>
            <action android:name="android.settings.APPLICATION_DETAILS_SETTINGS" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="https" />
        </intent>
    </queries>
    
    <!-- Функции устройства (опционально) -->
    <uses-feature
        android:name="android.hardware.wifi"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.location"
        android:required="false" />

    <application
        android:name=".WifiGuardApp"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WifiGuard"
        android:usesCleartextTraffic="false"
        tools:targetApi="31">

        <!-- ===== MAIN ACTIVITY ===== -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.WifiGuard"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ===== SERVICES ===== -->
        <!-- Foreground Service для полного сканирования Wi-Fi -->
        <!-- Android 14+ требует явное объявление типа foreground service и обоснование -->
        <service
            android:name=".core.service.WifiForegroundScanService"
            android:foregroundServiceType="location"
            android:exported="false">
            <!-- Обоснование использования foreground service типа location:
                 Приложение сканирует Wi-Fi сети для обнаружения потенциальных угроз безопасности.
                 Это требует доступа к местоположению, так как Android требует разрешение на геолокацию
                 для сканирования Wi-Fi сетей начиная с Android 6.0. -->
        </service>
        
        <!-- ===== WORKMANAGER ===== -->
        <!-- Фоновый мониторинг -->
        <service
            android:name="androidx.work.impl.foreground.SystemForegroundService"
            android:foregroundServiceType="location"
            tools:node="merge" />

        <!-- ===== BROADCAST RECEIVERS ===== -->
        <!-- Получение результатов Wi-Fi сканирования -->
        <receiver
            android:name=".core.data.wifi.WifiScanReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.wifi.SCAN_RESULTS" />
            </intent-filter>
        </receiver>

        <!-- Мониторинг подключений к WiFi сетям в реальном времени -->
        <receiver
            android:name=".core.data.wifi.WifiConnectionReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_ACTION" />
                <action android:name="android.net.wifi.NETWORK_STATE_CHANGED" />
            </intent-filter>
        </receiver>

        <!-- Перезапуск мониторинга после перезагрузки -->
        <receiver
            android:name=".core.background.BootReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>

        <!-- ===== PROVIDERS ===== -->
        <!-- FileProvider для шаринга файлов (если используется) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- WorkManager initialization -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>

    </application>

</manifest>